{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "lib": ["ES2020"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "resolveJsonModule": true,
    },
    "include": ["src/**/*", "src/types/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  